generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Word {
  id        Int     @id @default(autoincrement())
  word      String
  speech    String
  audio_src String?
  pronounce String?
  define    String
  sentence  String?
  capital   String  @default("")

  favorites  FavoriteWords[]
}


model Account {
  id         Int     @id @default(autoincrement())
  username   String  @unique
  password   String
  creat_time  DateTime @default(now())

  favorites  FavoriteWords[]
}


model FavoriteWords {
  userId   Int
  wordId   Int
  creatTime DateTime @default(now())

  user   Account @relation(fields: [userId], references: [id], onDelete: Cascade)
  word   Word    @relation(fields: [wordId], references: [id], onDelete: Cascade)

  @@id([userId, wordId]) 
}
