generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model account {
  id            Int             @id @default(autoincrement())
  username      String          @unique(map: "Account_username_key")
  password      String
  creat_time    DateTime        @default(now())
  favoritewords favoritewords[]
}

model FavoriteWords {
  userId   Int @map("user_id") 
  wordId   Int @map("word_id") 
  creatTime DateTime @default(now())
  account   account  @relation(fields: [userId], references: [id], onDelete: Cascade, map: "FavoriteWords_userId_fkey")
  word      word     @relation(fields: [wordId], references: [id], onDelete: Cascade, map: "FavoriteWords_wordId_fkey")

  @@id([userId, wordId])
  @@index([wordId], map: "FavoriteWords_wordId_fkey")
}

model word {
  id            Int             @id @default(autoincrement())
  word          String          @db.VarChar(255)
  audio_src     String?         @db.VarChar(255)
  define        String          @db.VarChar(255)
  pronounce     String?
  sentence      String?         @db.VarChar(255)
  speech        String
  capital       String          @default("")
  favoritewords favoritewords[]
}
